            const modalBody = document.getElementById('modalBody');
            const modalClose = document.querySelector('.modal-close');
            const viewProjectBtns = document.querySelectorAll('.view-project');
            
            // Sample project data
            const projectData = {
                'premium-business-cards': {
                    title: 'Premium Business Cards for Executive Realty',
                    images: ['img/embl2.jpg', 'img/pack1.jpg'],
                    description: 'These luxury invoice books were designed for Executive Realty, featuring sported margin line with easy tearing and stamping',
